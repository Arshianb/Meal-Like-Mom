<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    app:umanoPanelHeight="55dp"
    app:umanoShadowHeight="30dp"
    app:umanoParallaxOffset="50dp">


    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <include
                layout="@layout/choose_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/container_height"
                />
            <com.yalantis.filter.widget.Filter
                android:id="@+id/filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </FrameLayout>


    </android.support.v4.widget.DrawerLayout>


    <include
        layout="@layout/slider_is_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</com.sothree.slidinguppanel.SlidingUpPanelLayout>